{
    "manifest_version": 3,
    "name": "Website filter chrome extension",
    "version": "1.0",
    "description": "Changes the background colour of Chrome pages (including PDFs).",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["*://*/*.pdf"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png"
    }
  }
  